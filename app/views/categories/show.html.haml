.flexbox
    .recipes-sidebar
        = render 'recipes_sidebar'

    .recipes-right
        .recipes-navbar
            %ul.navs
                %li.nav
                    =link_to("TOP", categories_url())
                %li.nav
                    = @category.name
        .recipes-content

            %h2
                = @category.name

            .recipe-boxes
                - @category.recipes.each do |recipe|
                    =link_to(recipe_url(recipe)) do
                        .recipe-box
                            %img.recipe-thumbnail{src: "/assets/carousel_a99ba828b4eb8ed8b6560e2f0011c68f.jpg"}
                            .recipe-name
                                = recipe.name
